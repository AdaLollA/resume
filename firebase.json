{
  "hosting": {
    "public": "www",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/sitemap.xml",
        "destination": "/sitemap.xml"
      },
      {
        "source": "/noscript/home",
        "destination": "/prerender/home.html"
      },
      {
        "source": "/noscript/cms",
        "destination": "/prerender/cms.html"
      },
      {
        "source": "/noscript/experience",
        "destination": "/prerender/experience.html"
      },
      {
        "source": "/noscript/music",
        "destination": "/prerender/music.html"
      },
      {
        "source": "/noscript/portfolio",
        "destination": "/prerender/portfolio.html"
      },
      {
        "source": "/noscript/skills",
        "destination": "/prerender/skills.html"
      },
      {
        "source": "/noscript/team",
        "destination": "/prerender/team.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
